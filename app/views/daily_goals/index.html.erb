<h1>Listing daily_goals</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Description</th>
      <th>Done</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @daily_goals.each do |daily_goal| %>
      <tr>
        <td><%= daily_goal.user %></td>
        <td><%= daily_goal.description %></td>
        <td><%= daily_goal.done %></td>
        <td><%= link_to 'Show', daily_goal %></td>
        <td><%= link_to 'Edit', edit_daily_goal_path(daily_goal) %></td>
        <td><%= link_to 'Destroy', daily_goal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Daily goal', new_daily_goal_path %>
